<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>T4uUserLoginServlet</servlet-name>
        <servlet-class>com.ss.Controller.T4uUserLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>T4uRegisterServlet</servlet-name>
        <servlet-class>com.ss.Controller.T4uRegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>T4uUserLogOutServlet</servlet-name>
        <servlet-class>com.ss.Controller.T4uUserLogOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>T4uIndexInitServlet</servlet-name>
        <servlet-class>com.ss.Controller.T4uIndexInitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>T4uUserProfileServlet</servlet-name>
        <servlet-class>com.ss.Controller.T4uUserProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>T4uUserUpdateProfileServlet</servlet-name>
        <servlet-class>com.ss.Controller.T4uUserUpdateProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>T4uMovieDetailServlet</servlet-name>
        <servlet-class>com.ss.Controller.T4uMovieDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>T4uUserLoginServlet</servlet-name>
        <url-pattern>/user/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>T4uRegisterServlet</servlet-name>
        <url-pattern>/user/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Log4jInit</servlet-name>
        <servlet-class>com.tchzt.logTest.Log4jInit</servlet-class>
        <init-param>
            <param-name>log4j</param-name>
            <param-value>/WEB-INF/classes/log4j.properties</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>T4uUserLogOutServlet</servlet-name>
        <url-pattern>/user/logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>T4uIndexInitServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>T4uUserProfileServlet</servlet-name>
        <url-pattern>/user/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>T4uUserUpdateProfileServlet</servlet-name>
        <url-pattern>/user/update.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>T4uMovieDetailServlet</servlet-name>
    <url-pattern>/movie/detail</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
</web-app>
